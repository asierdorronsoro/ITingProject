<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.integrationmaps.Register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/login"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="187dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logoa" />

            <!--  Name Label -->
            <EditText
                android:id="@+id/input_name"
                android:layout_width="246dp"
                android:layout_height="54dp"
                android:background="@drawable/usuario"
                android:hint="Nombre"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="80dp"
                android:layout_marginBottom="20dp"
                android:inputType="textCapWords"/>

            <!-- Email Label -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="248dp"
                android:layout_height="45dp"
                android:background="@drawable/usuario"
                android:hint="email"
                android:paddingLeft="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress" />

            <!-- Password Label -->
            <EditText
                android:id="@+id/input_password"
                android:layout_width="251dp"
                android:layout_height="49dp"
                android:background="@drawable/contra"
                android:paddingLeft="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <!-- Password Label -->
            <EditText
                android:id="@+id/input_confirm_password"
                android:layout_width="256dp"
                android:layout_height="58dp"
                android:background="@drawable/contra"
                android:paddingLeft="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <!-- Signup Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="203dp"
                android:layout_height="46dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/botonlogin"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/link_login"
                android:layout_width="203dp"
                android:layout_height="46dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textologin"
                android:gravity="center"
                android:textSize="16dip" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
