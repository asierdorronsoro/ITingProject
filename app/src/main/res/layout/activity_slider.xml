<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.integrationmaps.SliderActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/restaur"
            android:background="@color/iron"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/screenshot"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:background="@color/black"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/separador"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/rest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:layout_weight="4.83"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direccion" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/tipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/importe"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:id="@+id/precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/importe"
                            android:layout_toStartOf="@+id/importe"
                            android:text="Precio: " />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_margin="@dimen/activity_horizontal_margin">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/editText2"
                            android:layout_toStartOf="@+id/editText2"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <EditText
                            android:id="@+id/valoracion"
                            android:layout_width="96dp"
                            android:layout_height="60dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="9/10"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="141dp"
                            tools:layout_editor_absoluteY="16dp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/primeros"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/alert_light_frame"
                        android:layout_below="@+id/titulo1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView4" />

                    <EditText
                        android:id="@+id/titulo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Titulo"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/plato1"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="TextView"
                        android:layout_alignBottom="@+id/imageView4"
                        android:layout_alignRight="@+id/titulo1"
                        android:layout_alignEnd="@+id/titulo1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/segundos"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/alert_light_frame"
                        android:layout_alignBottom="@+id/plato2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:id="@+id/titulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Titulo"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/plato2"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="17dp"
                        android:text="TextView"
                        android:layout_below="@+id/titulo2"
                        android:layout_alignLeft="@+id/titulo2"
                        android:layout_alignStart="@+id/titulo2" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/desert"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/postre"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/plato3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        app:srcCompat="@android:drawable/alert_light_frame" />

                    <EditText
                        android:id="@+id/titulo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Titulo"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/plato3"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:text="TextView"
                        android:layout_below="@+id/titulo4"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
